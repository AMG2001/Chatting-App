<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="leftSideBar" alignment="CENTER" prefHeight="734.0" prefWidth="199.0" spacing="100.0"
      style="-fx-background-color: E1F0DA; -fx-border-color: black;" styleClass="leftSideBar"
      stylesheets="@../Styles/leftSideBar.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gov.iti.jets.Controllers.Shared.LeftSideBar.LeftSideBar">
    <children>
        <VBox alignment="CENTER" prefHeight="245.0" prefWidth="120.0" spacing="14.0">
            <children>
                <Button fx:id="btn_profile" graphicTextGap="0.0" mnemonicParsing="false" onAction="#moveToProfile"
                        styleClass="option" text="Profile">
                    <graphic>
                        <FontAwesomeIconView glyphName="USER" size="28"/>
                    </graphic>
                </Button>
                <Button fx:id="btn_home" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                        onAction="#moveToHomePage" styleClass="option" text="Home">
                    <graphic>
                        <FontAwesomeIconView glyphName="HOME" size="28"/>
                    </graphic>
                </Button>
                <Button fx:id="btn_notifications" layoutX="10.0" layoutY="75.0" mnemonicParsing="false"
                        onAction="#showNotifications" styleClass="option" text="Notifications">
                    <graphic>
                        <FontAwesomeIconView glyphName="BELL" size="28"/>
                    </graphic>
                </Button>
                <Button fx:id="btn_addGroup" layoutX="10.0" layoutY="140.0" mnemonicParsing="false" onAction="#addGroup"
                        styleClass="option" text="Add Group">
                    <graphic>
                        <FontAwesomeIconView glyphName="PLUS" size="28"/>
                    </graphic>
                </Button>
            </children>
        </VBox>
        <VBox alignment="BOTTOM_CENTER" spacing="5.0" style="-fx-background-color: #E1F0DA;">
            <children>
                <Button fx:id="btn_logout" mnemonicParsing="false" onAction="#logout" styleClass="option" text="Logout">
                    <graphic>
                        <FontAwesomeIconView glyphName="SIGN_OUT" size="28"/>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </children>
</VBox>
