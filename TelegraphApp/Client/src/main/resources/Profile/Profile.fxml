<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gov.iti.jets.Controllers.ProfilePageController.ProfilePageController">
    <left>
        <fx:include source="/Shared/leftSideBar.fxml"/>
    </left>
    <center>
        <GridPane alignment="CENTER" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="24.0">
                    <children>
                        <Label text="Profile image" underline="true">
                            <VBox.margin>
                                <Insets top="24.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="18.0"/>
                            </font>
                        </Label>
                        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="305.0">
                            <children>
                                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../RegisterPage/images/l1.jpeg"/>
                                    </image>
                                </ImageView>
                                <Hyperlink text="Change profile image"/>
                            </children>
                        </VBox>
                        <Label layoutX="34.0" layoutY="34.0" text="Bio" underline="true">
                            <font>
                                <Font name="System Bold" size="18.0"/>
                            </font>
                        </Label>
                        <TextArea fx:id="ta_bio" maxHeight="400.0" maxWidth="500.0" prefHeight="200.0" prefWidth="200.0"
                                  promptText="About me"/>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="36.0">
                            <children>
                                <MFXButton fx:id="btn_saveChanges" minHeight="32.0" minWidth="120.0"
                                           onAction="#saveChanges"
                                           style="-fx-background-color: black; -fx-text-fill: white;"
                                           text="Save Changes" textFill="WHITE"/>
                                <MFXButton fx:id="btn_cancel" layoutX="10.0" layoutY="10.0" minHeight="32.0"
                                           minWidth="60.0" onAction="#cancel"
                                           style="-fx-background-color: Red; -fx-text-fill: white;" text="Cancel"
                                           textFill="WHITE"/>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets left="24.0"/>
                    </padding>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="24.0" GridPane.columnIndex="1">
                    <children>
                        <Label text="Account info" underline="true">
                            <VBox.margin>
                                <Insets top="24.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="18.0"/>
                            </font>
                        </Label>
                        <MFXTextField fx:id="tf_userName" borderGap="8.0" floatingText="Username" prefColumnCount="8"
                                      prefHeight="28.0" prefWidth="268.0"/>
                        <MFXTextField fx:id="tf_gender" borderGap="8.0" floatingText="Gender" layoutX="10.0"
                                      layoutY="28.0" prefColumnCount="8" prefHeight="28.0" prefWidth="268.0"/>
                        <MFXTextField fx:id="tf_country" borderGap="8.0" floatingText="Country" layoutX="10.0"
                                      layoutY="77.0" prefColumnCount="8" prefHeight="28.0" prefWidth="268.0"/>
                        <MFXTextField fx:id="tf_phoneNumber" borderGap="8.0" floatingText="Phone" layoutX="10.0"
                                      layoutY="127.0" prefColumnCount="8" prefHeight="28.0" prefWidth="268.0"/>
                        <MFXTextField fx:id="tf_email" borderGap="8.0" floatingText="Email" layoutX="10.0"
                                      layoutY="176.0" prefColumnCount="8" prefHeight="28.0" prefWidth="268.0"/>
                        <Label text="Date of Birth"/>
                        <DatePicker fx:id="datePicker"/>
                    </children>
                    <GridPane.margin>
                        <Insets left="24.0"/>
                    </GridPane.margin>
                </VBox>
            </children>
        </GridPane>
    </center>
</BorderPane>
